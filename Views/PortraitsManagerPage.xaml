<Page
  x:Class="StarsectorToolsExtension.PortraitsManager.Views.PortraitsManagerPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:ModTypeGroup="clr-namespace:StarsectorTools.Libs.Utils;assembly=StarsectorTools"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
  xmlns:local="clr-namespace:StarsectorToolsExtension.PortraitsManager"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:vm="clr-namespace:StarsectorToolsExtension.PortraitsManager.ViewModels"
  Title="PortraitsManager"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Page.DataContext>
    <vm:PortraitsManagerViewModel />
  </Page.DataContext>
  <Page.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/StarsectorTools;component/ThemeResources/ControlStyles.xaml" />
        <ResourceDictionary Source="/StarsectorTools;component/ThemeResources/ControlViewStyles.xaml" />
        <ResourceDictionary Source="/StarsectorTools;component/ThemeResources/ColorStyles.xaml" />
        <ResourceDictionary>
          <!--#region Style-->
          <Style
            x:Key="PortraitItem"
            BasedOn="{StaticResource ListBoxItemBaseStyle}"
            TargetType="ListBoxItem">
            <Setter Property="Tag" Value="{Binding Tag}" />
            <Setter Property="ToolTip" Value="{Binding ToolTip}" />
            <Setter Property="Height" Value="130" />
            <Setter Property="Width" Value="100" />
            <Setter Property="Padding" Value="0" />
          </Style>
          <!--#endregion-->
          <!--#region DataTemplate-->
          <DataTemplate x:Key="ModFactionList">
            <Expander
              Padding="0"
              Header="{Binding Header}"
              Style="{StaticResource ExpanderSelectedItem}"
              ToolTip="{Binding ToolTip}">
              <ListBox
                ItemContainerStyle="{StaticResource ListBoxItemView}"
                ItemsSource="{Binding FactionList.ItemsSource}"
                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                SelectedItem="{Binding FactionList.SelectedItem}"
                Style="{StaticResource ListBoxBaseStyle}">
                <i:Interaction.Triggers>
                  <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding FactionList.SelectionChangedCommand}" CommandParameter="{Binding FactionList.SelectedItem}" />
                  </i:EventTrigger>
                </i:Interaction.Triggers>
              </ListBox>
            </Expander>
          </DataTemplate>
          <DataTemplate x:Key="PortraitImageItem">
            <StackPanel>
              <Image
                Width="100"
                Height="100"
                DataContext="{Binding DataContext, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBoxItem}}"
                Source="{Binding Tag}">
                <Image.ToolTip>
                  <Image
                    Width="256"
                    Height="256"
                    Source="{Binding Tag}" />
                </Image.ToolTip>
              </Image>
              <Label
                Height="30"
                Content="{Binding DataContext.Name, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBoxItem}}"
                Style="{StaticResource LabelBaseStyle}" />
            </StackPanel>
          </DataTemplate>
          <!--#endregion-->
        </ResourceDictionary>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Page.Resources>
  <Grid>
    <GroupBox Header="PortraitsManager" Style="{StaticResource GroupBoxBaseStyle}">
      <Grid Grid.Row="2" Grid.RowSpan="2">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition MinWidth="128" />
          <ColumnDefinition Width="5" />
          <ColumnDefinition MinWidth="128" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <ComboBox
          x:Name="ComboBox_GroupList"
          Width="{Binding ActualWidth, ElementName=ScrollViewer_ModsList}"
          Margin="0,0,5,0"
          HorizontalAlignment="Left"
          VerticalAlignment="Top"
          DisplayMemberPath="Content"
          ItemContainerStyle="{StaticResource ComboBoxItemBaseStyle}"
          ItemsSource="{Binding ComboBox_GroupList.ItemsSource}"
          SelectedItem="{Binding ComboBox_GroupList.SelectedItem}"
          Style="{StaticResource ComboBoxBaseStyle}">
          <i:Interaction.Triggers>
            <i:EventTrigger EventName="SelectionChanged">
              <i:InvokeCommandAction Command="{Binding ComboBox_GroupList.SelectionChangedCommand}" CommandParameter="{Binding ComboBox_GroupList.SelectedItem}" />
            </i:EventTrigger>
          </i:Interaction.Triggers>
        </ComboBox>
        <ScrollViewer
          x:Name="ScrollViewer_ModsList"
          Margin="0,35,5,0"
          ScrollViewer.VerticalScrollBarVisibility="Auto">
          <StackPanel x:Name="StackPanel_GroupList" MinWidth="100">
            <ItemsControl ItemTemplate="{StaticResource ModFactionList}" ItemsSource="{Binding MainModsList, IsAsync=True}" />
          </StackPanel>
        </ScrollViewer>
        <GroupBox
          x:Name="GroupBox_MalePortraits"
          Grid.Column="1"
          Header="Male"
          Style="{StaticResource GroupBoxBaseStyle}"
          Tag="Male">
          <Grid>
            <TextBox
              x:Name="TextBox_MaleSearchPortraits"
              VerticalAlignment="Top"
              Style="{StaticResource TextBoxBaseStyle}"
              Text="{Binding MaleFilterText}">
              <i:Interaction.Triggers>
                <i:EventTrigger EventName="TextChanged">
                  <i:InvokeCommandAction Command="{Binding MaleFilterTextChangeCommand}" CommandParameter="{Binding MaleFilterText}" />
                </i:EventTrigger>
              </i:Interaction.Triggers>
            </TextBox>
            <!--  TextBox输入占位符  -->
            <Label
              Width="{Binding Width, ElementName=TextBox_MaleSearchPortraits}"
              Height="{Binding Height, ElementName=TextBox_MaleSearchPortraits}"
              Margin="{Binding Margin, ElementName=TextBox_MaleSearchPortraits}"
              HorizontalAlignment="{Binding HorizontalAlignment, ElementName=TextBox_MaleSearchPortraits}"
              VerticalAlignment="{Binding VerticalAlignment, ElementName=TextBox_MaleSearchPortraits}"
              Background="{x:Null}"
              Content="搜索肖像"
              FontSize="16"
              IsEnabled="False"
              IsHitTestVisible="False">
              <Label.Style>
                <Style BasedOn="{StaticResource LabelBaseStyle}" TargetType="Label">
                  <Setter Property="Visibility" Value="Hidden" />
                  <Style.Triggers>
                    <MultiDataTrigger>
                      <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding Text, ElementName=TextBox_MaleSearchPortraits}" Value="" />
                        <Condition Binding="{Binding IsFocused, ElementName=TextBox_MaleSearchPortraits}" Value="False" />
                      </MultiDataTrigger.Conditions>
                      <MultiDataTrigger.Setters>
                        <Setter Property="Visibility" Value="Visible" />
                      </MultiDataTrigger.Setters>
                    </MultiDataTrigger>
                  </Style.Triggers>
                </Style>
              </Label.Style>
            </Label>
            <ListBox
              x:Name="ListBox_MalePortraitsList"
              Margin="0,30,0,0"
              AllowDrop="True"
              Background="{DynamicResource ColorBG}"
              Drop="ListBox_MalePortraitsList_Drop"
              ItemContainerStyle="{StaticResource PortraitItem}"
              ItemTemplate="{StaticResource PortraitImageItem}"
              ItemsSource="{Binding NowMalePortraitItems, IsAsync=True}"
              SelectionMode="Extended"
              Style="{StaticResource ListBoxBaseStyle}">
              <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                  <WrapPanel />
                </ItemsPanelTemplate>
              </ListBox.ItemsPanel>
            </ListBox>
          </Grid>
        </GroupBox>
        <GridSplitter
          Grid.Column="2"
          Width="5"
          Margin="0,0,0,0"
          HorizontalAlignment="Stretch"
          Background="{DynamicResource ColorLight3}"
          Foreground="{x:Null}" />
        <GroupBox
          x:Name="GroupBox_FemalePortraits"
          Grid.Column="3"
          Header="Female"
          Style="{StaticResource GroupBoxBaseStyle}"
          Tag="Female">
          <Grid>
            <TextBox
              x:Name="TextBox_FemaleSearchPortraits"
              VerticalAlignment="Top"
              Style="{StaticResource TextBoxBaseStyle}"
              Text="{Binding FemaleFilterText}">
              <i:Interaction.Triggers>
                <i:EventTrigger EventName="TextChanged">
                  <i:InvokeCommandAction Command="{Binding FemaleFilterTextChangeCommand}" CommandParameter="{Binding FemaleFilterText}" />
                </i:EventTrigger>
              </i:Interaction.Triggers>
            </TextBox>
            <!--  TextBox输入占位符  -->
            <Label
              Width="{Binding Width, ElementName=TextBox_FemaleSearchPortraits}"
              Height="{Binding Height, ElementName=TextBox_FemaleSearchPortraits}"
              Margin="{Binding Margin, ElementName=TextBox_FemaleSearchPortraits}"
              HorizontalAlignment="{Binding HorizontalAlignment, ElementName=TextBox_FemaleSearchPortraits}"
              VerticalAlignment="{Binding VerticalAlignment, ElementName=TextBox_FemaleSearchPortraits}"
              Background="{x:Null}"
              Content="搜索肖像"
              FontSize="16"
              IsEnabled="False"
              IsHitTestVisible="False">
              <Label.Style>
                <Style BasedOn="{StaticResource LabelBaseStyle}" TargetType="Label">
                  <Setter Property="Visibility" Value="Hidden" />
                  <Style.Triggers>
                    <MultiDataTrigger>
                      <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding Text, ElementName=TextBox_FemaleSearchPortraits}" Value="" />
                        <Condition Binding="{Binding IsFocused, ElementName=TextBox_FemaleSearchPortraits}" Value="False" />
                      </MultiDataTrigger.Conditions>
                      <MultiDataTrigger.Setters>
                        <Setter Property="Visibility" Value="Visible" />
                      </MultiDataTrigger.Setters>
                    </MultiDataTrigger>
                  </Style.Triggers>
                </Style>
              </Label.Style>
            </Label>
            <ListBox
              x:Name="ListBox_FemalePortraitsList"
              Margin="0,30,0,0"
              AllowDrop="True"
              Background="{DynamicResource ColorBG}"
              Drop="ListBox_MalePortraitsList_Drop"
              ItemContainerStyle="{StaticResource PortraitItem}"
              ItemTemplate="{StaticResource PortraitImageItem}"
              ItemsSource="{Binding NowFemalePortraitItems, IsAsync=True}"
              SelectionMode="Extended"
              Style="{StaticResource ListBoxBaseStyle}">
              <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                  <WrapPanel />
                </ItemsPanelTemplate>
              </ListBox.ItemsPanel>
            </ListBox>
          </Grid>
        </GroupBox>
        <Grid
          Grid.Column="4"
          MinWidth="100"
          Margin="5,0,0,0">
          <ScrollViewer Margin="0,0,0,40" VerticalScrollBarVisibility="Auto">
            <StackPanel>
              <Expander
                Margin="0,0,0,5"
                Header="打开目录"
                Style="{StaticResource ExpanderBaseStyle}">
                <StackPanel>
                  <Button
                    x:Name="Button_OpenGroupDirectory"
                    Height="30"
                    Margin="0,0,0,5"
                    Content="打开组目录"
                    Style="{StaticResource ButtonBaseStyle}" />
                  <Button
                    x:Name="Button_OpenFactionDirectory"
                    Height="30"
                    Margin="0,0,0,5"
                    Content="打开势力目录"
                    Style="{StaticResource ButtonBaseStyle}" />
                  <Button
                    x:Name="Button_OpenPortraitDirectory"
                    Height="30"
                    Margin="0,0,0,5"
                    Content="打开肖像目录"
                    Style="{StaticResource ButtonBaseStyle}" />
                  <Button
                    x:Name="Button_OpenPMDirectory"
                    Height="30"
                    Margin="0,0,0,5"
                    Content="打开管理器目录"
                    Style="{StaticResource ButtonBaseStyle}" />
                </StackPanel>
              </Expander>
              <Expander
                Margin="0,0,0,5"
                Header="操作肖像列表"
                Style="{StaticResource ExpanderBaseStyle}">
                <StackPanel>
                  <Button
                    x:Name="Button_ImportPortraitList"
                    Height="30"
                    Margin="0,0,0,5"
                    Content="导入列表"
                    Style="{StaticResource ButtonBaseStyle}" />
                  <Button
                    x:Name="Button_ExportPortraitList"
                    Height="30"
                    Margin="0,0,0,5"
                    Content="导出列表"
                    Style="{StaticResource ButtonBaseStyle}" />
                </StackPanel>
              </Expander>
            </StackPanel>
          </ScrollViewer>
          <Button
            x:Name="Button_Save"
            Height="30"
            VerticalAlignment="Bottom"
            Click="Button_Save_Click"
            Content="保存配置"
            Style="{StaticResource RemindStyle}"
            Tag="False" />
        </Grid>
      </Grid>
    </GroupBox>
  </Grid>
</Page>
